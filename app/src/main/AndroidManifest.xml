<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.junior_carvalho.webserviceeclipseandroid" >

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainAcitivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CadastroActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".BuscaPorIdActivity"
            android:label="@string/title_activity_busca_por_id" >
        </activity>
        <activity
            android:name=".AtualizarDadosActivity"
            android:label="@string/title_activity_atualizar_dados" >
        </activity>
        <activity
            android:name=".Detalhes_Activity"
            android:label="@string/title_activity_detalhes_" >
        </activity>
        <activity
            android:name=".MainActivityLogin"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".RestritoActivity"
            android:label="@string/title_activity_restrito"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
